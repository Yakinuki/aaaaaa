<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorPane" prefHeight="406.0" prefWidth="319.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConfigurationContoller">
   <children>
      <Label layoutY="14.0" prefHeight="60.0" prefWidth="325.0" text="Configuration">
         <font>
            <Font name="Retro Gaming" size="35.0" />
         </font>
      </Label>
      <MenuButton fx:id="ButtonMenuOp" layoutX="94.0" layoutY="92.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="137.0" text="Operation">
        <items>
            <MenuItem fx:id="geteilt" mnemonicParsing="false" onAction="#setDivision" text="Division" />
          <MenuItem fx:id="plus" mnemonicParsing="false" onAction="#setAddition" text="Addition" />
          <MenuItem fx:id="multiplikation" mnemonicParsing="false" onAction="#setMultiplication" text="Multiplication" />
            <MenuItem fx:id="subtraktion" mnemonicParsing="false" onAction="#setSubtraction" text="Subtraction" />
        </items>
         <font>
            <Font name="Retro Gaming" size="14.0" />
         </font>
      </MenuButton>
      <MenuButton fx:id="ButtonMenuDiff" layoutX="94.0" layoutY="203.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="137.0" text="Difficulty">
        <items>
          <MenuItem fx:id="einfach" mnemonicParsing="false" onAction="#setEasy" text="Easy" />
          <MenuItem fx:id="mittel" mnemonicParsing="false" onAction="#setMedium" text="Medium" />
            <MenuItem fx:id="schwer" mnemonicParsing="false" onAction="#setHard" text="Hard" />
        </items>
         <font>
            <Font name="Retro Gaming" size="12.0" />
         </font>
      </MenuButton>
      <TextField fx:id="Enter" layoutX="68.0" layoutY="313.0" prefHeight="35.0" prefWidth="190.0" promptText="Enter Name">
         <font>
            <Font name="Retro Gaming" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="startButton" layoutX="132.0" layoutY="356.0" mnemonicParsing="false" onAction="#startGameButton" text="GO!">
         <font>
            <Font name="Retro Gaming" size="19.0" />
         </font>
      </Button>
      <Label fx:id="OPLabel" layoutX="94.0" layoutY="146.0" prefHeight="24.0" prefWidth="137.0">
         <font>
            <Font name="Retro Gaming" size="12.0" />
         </font>
      </Label>
      <Label fx:id="DiffLabel" layoutX="94.0" layoutY="257.0" prefHeight="24.0" prefWidth="137.0">
         <font>
            <Font name="Retro Gaming" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
